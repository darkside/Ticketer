!!! 5
%html
  %head
    %title= t("site_name")
    = stylesheet_link_tag 'screen.css', 'formtastic.css', :media => 'screen, projection'
    = stylesheet_link_tag 'print.css', :media => 'print'
    /[if lt IE 8]
      = stylesheet_link_tag 'ie.css', :media => 'screen, projection'
    = javascript_include_tag :defaults
    = csrf_meta_tag
  %body.bp.two-col
    #container
      #header
        - flash.each do |type, value|
          .flash{ :class => type.to_s }
            = value
        %h1= link_to t("site_name"), root_url
      #sidebar
        = render 'shared/links'
      #content
        = yield
      #footer
        // footer here

